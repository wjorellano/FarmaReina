<%= simple_form_for(@sale, remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.association :product,
                      required: true,
                      label: "producto" %>
    <%= f.input :cantidad,
                required: true%>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'Agregar producto', class:"btn btn-success" %>
    </div>
<% end %>
