<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-body">
        <div class="box">
          <%= simple_form_for(@product) do |f| %>
            <div class="form-inputs">
              <%# f.association :user, label:"usuario" %>
              <%= f.input :nombre %>
              <%= f.input :existencia %>
              <%= f.input :p_costo, label: 'Precio costo' %>
              <%= f.input :p_minimo, label: 'Precio minimo' %>
              <%= f.input :p_venta, label: 'Precio de venta' %>
              <%= f.input :total_costo, label: 'total costo' %>
              <%= f.input :v_precio_venta, label: 'Valor del precio de venta' %>
              <%= f.input :gondola %>
            </div>
            <div class="form-actions">
              <%= f.submit @product.new_record? ? "Crear producto" : "Actualizar producto", class:"btn btn-success"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
